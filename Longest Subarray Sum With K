#include<iostream>
#include<vector>
#include<map>
using namespace std;


int longestSubarraySum(vector<int> arr, int k){
    int n = arr.size();
    int maxLen = 0;
    int len = 0;
    int sum = 0;
    map<int, int> mp;
    for(int i=0; i<n; i++){
        sum = sum + arr[i];
        if(sum == k){
            maxLen = max(maxLen, i+1); 
        }
        int rem = sum - k;
        if(mp.find(rem) != mp.end()){
            len = i - mp[rem];
            maxLen = max(maxLen, len);
        }
        if(mp.find(rem) == mp.end()){
            mp[sum] = i;
        }
    }
    return maxLen;
}
int main(){
    int n;
    cin>>n;
    int k;
    cin>>k;
    vector<int> arr(n);
    for(int i=0; i<n; i++){
        cin>>arr[i];
    }
    cout<<longestSubarraySum(arr, k);
    return 0;
}
