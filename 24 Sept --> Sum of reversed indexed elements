#include<iostream>
using namespace std;


int solve(int arr[], int n){
    int sum = 0;
    for(int i=0; i<n; i++){
        int Ridx = n - i - 1;
        if(Ridx%2 == 0){
            sum = sum + arr[i];
        }
    }
    return sum;
}

int main(){
    int n;
    cin>>n;
    int arr[n];
    for(int i=0; i<n; i++){
        cin>>arr[i];
    }
    cout<<solve(arr, n);
    return 0;
}
